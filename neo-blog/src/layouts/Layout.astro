---
import type { Props } from 'astro';
import { Icon } from 'astro-icon/components';
import '../styles/global.css';

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body class="bg-[#FFFDFA] selection:bg-[#FF8E3C]/20">
    <header class="fixed top-0 left-0 right-0 z-50 bg-[#FFFDFA] border-b-4 border-[#0D0D0D]">
      <div class="max-w-[1400px] mx-auto px-6">
        <nav class="flex items-center justify-between h-20">
          <a 
            href="/" 
            class="text-xl font-bold text-[#0D0D0D] hover:-rotate-2 transition-transform"
          >
            samuel.silva
          </a>
          <div class="flex items-center gap-8">
            <a 
              href="/blog" 
              class="text-[#0D0D0D] hover:-rotate-2 transition-transform font-medium"
            >
              Writing
            </a>
            <a 
              href="/projects" 
              class="text-[#0D0D0D] hover:-rotate-2 transition-transform font-medium"
            >
              Projects
            </a>
            <a 
              href="/about" 
              class="text-[#0D0D0D] hover:-rotate-2 transition-transform font-medium"
            >
              About
            </a>
            <a 
              href="/contact" 
              class="px-6 py-2 bg-[#FF8E3C] text-[#0D0D0D] font-bold rounded-lg border-4 border-[#0D0D0D] shadow-[4px_4px_0px_0px_rgba(13,13,13)] hover:translate-x-[3px] hover:translate-y-[3px] hover:shadow-none transition-all"
            >
              Contact
            </a>
          </div>
        </nav>
      </div>
    </header>

    <main class="pt-20">
      <slot />
    </main>

    <footer class="border-t-4 border-[#0D0D0D] mt-32">
      <div class="max-w-[1400px] mx-auto px-6">
        <div class="flex items-center justify-between h-20">
          <span class="text-sm text-[#0D0D0D] font-medium">Â© {new Date().getFullYear()}</span>
          <div class="flex items-center gap-6">
            <a 
              href="https://github.com" 
              target="_blank" 
              rel="noopener noreferrer" 
              class="text-[#0D0D0D] hover:-rotate-12 transition-transform"
            >
              <Icon name="mdi:github" class="w-6 h-6" />
            </a>
            <a 
              href="https://twitter.com" 
              target="_blank" 
              rel="noopener noreferrer" 
              class="text-[#0D0D0D] hover:-rotate-12 transition-transform"
            >
              <Icon name="mdi:twitter" class="w-6 h-6" />
            </a>
            <a 
              href="https://linkedin.com" 
              target="_blank" 
              rel="noopener noreferrer" 
              class="text-[#0D0D0D] hover:-rotate-12 transition-transform"
            >
              <Icon name="mdi:linkedin" class="w-6 h-6" />
            </a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html> 
---
import type { Props } from 'astro';
import { Icon } from 'astro-icon/components';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-[#0D0D0D] selection:bg-[#FF4F70]/20">
    <header class="fixed top-0 left-0 right-0 z-50 bg-[#0D0D0D]/80 backdrop-blur-md border-b border-[#1A1A1A]">
      <div class="max-w-[1400px] mx-auto px-6">
        <nav class="flex items-center justify-between h-20">
          <a href="/" class="text-xl font-medium text-[#F5F5F5] hover:text-[#FF4F70] transition-colors">samuel.silva</a>
          <div class="flex items-center gap-8">
            <a href="/blog" class="text-[#AFAFAF] hover:text-[#F5F5F5] transition-colors">Writing</a>
            <a href="/projects" class="text-[#AFAFAF] hover:text-[#F5F5F5] transition-colors">Projects</a>
            <a href="/about" class="text-[#AFAFAF] hover:text-[#F5F5F5] transition-colors">About</a>
            <a 
              href="/contact" 
              class="relative px-5 py-2 overflow-hidden group rounded-full hover:bg-[#1A1A1A] transition-colors"
            >
              <span class="relative text-[#F5F5F5] group-hover:text-[#FF4F70] transition-colors">Contact</span>
              <div class="absolute inset-0 rounded-full border border-[#FF4F70] group-hover:border-[#FF4F70] transition-colors"></div>
            </a>
          </div>
        </nav>
      </div>
    </header>

    <main class="pt-20">
      <slot />
    </main>

    <Footer />
  </body>
</html> 